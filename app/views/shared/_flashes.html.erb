

<% if notice %>
  <div class="alert alert-info alert-dismissible fade show m-1 custom-notice" role="alert">
    <i class="bi bi-info-circle-fill me-2"></i>
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning alert-dismissible fade show m-1 custom-alert" role="alert">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    <%= alert %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
