
<% if notice %>
  <div data-controller="flash" data-flash-target="flash" class="alert alert-info alert-dismissible fade show m-1 custom-notice" role="alert">
    <i class="bi bi-info-circle-fill me-2"></i>
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
