<%= javascript_include_tag 'swipe' %>

<h1><%= current_user.name %>'s Shopping List</h1>

<% if @ingredients.any? %>
  <div>
    <% @ingredients.each do |ingredient| %>
        <div class="shopping-list-card">
          <%= button_to shopping_list_path(ingredient), {method: :put, params: { status: 0 }, class: 'circle-button fa-solid fa-check-to-slot', style: 'color: green;'} do %><% end %>
          <div class="info">
              <div class="title"><%= ingredient.name %></div>
              <div class="subtitle"><%= ingredient.amount %> <%= ingredient.unit %></div>
          </div>
          <%= button_to ingredient_path(ingredient), {method: :delete, data: { confirm: 'Are you sure?' }, class: 'circle-button fa-regular fa-circle-xmark'} do %>
          <% end %>
        </div>
    <% end %>
  </div>
<% else %>
  <p>No items in your shopping list.</p>
<% end %>

<div class="shopping-btn-container">
  <%= link_to 'Add Item', new_shopping_list_path, class: "pink-button" %>
</div>
