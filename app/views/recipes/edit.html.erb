<% recipe = local_assigns[:recipe] || @recipe %>
<%# recipe_ingredients = local_assigns[:recipe_ingredients] || @recipe_ingredients %>

<body class="green-background form-center">
  <div class="styled-form">
    <%= simple_form_for recipe, url: recipe_path(params[:id]) do |f| %>
      <div class="form-row">
        <%= f.input :title, label: "Title", wrapper_html: { class: "form-group sign-up-input" } %>
      </div>
      <div class="form-row">
        <%= f.input :description, label: "Instructions", wrapper_html: { class: "form-group sign-up-input" } %>
      </div>
      <div class="form-row" class="d-none">
        <%#= f.input :favorited, label: "Favorite", wrapper_html: { class: "form-group" } %>
      </div>
      <%= f.submit "Save", class: "form-button recipe-save" %>
    <% end %>
  </div>

  <div class="link-back">
    <%= link_to '<< Back', 'javascript:history.back()', class: "link-back" %>
  </div>
</body>

