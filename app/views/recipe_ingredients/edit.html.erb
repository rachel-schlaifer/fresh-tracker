<% recipe_ingredient = local_assigns[:recipe_ingredient] || @recipe_ingredient %>

<div style="background-color: #A1CD9A; padding: 20px; min-height: 100vh;">
  <div class="styled-form">
    <%= simple_form_for [@recipe, recipe_ingredient] do |f| %>
      <div class="form-row">
        <%= f.input :name, label: "Name", wrapper_html: { class: "form-group" } %>
      </div>
      <div class="form-row">
        <%= f.input :amount, label: "Qty", wrapper_html: { class: "form-group" } %>
        <%= f.input :unit, label: "Unit", wrapper_html: { class: "form-group" } %>
      </div>
      <div class="form-row">
        <%= f.input :category_id, as: :select,
                    collection: Category.all.pluck(:name, :id),
                    prompt: "Select a category",
                    wrapper_html: { class: "form-group" } %>
      </div>
      <%= f.submit "Save", class: "new-form-save" %>
    <% end %>
    <div class="link-back">
      <%= link_to '<< Back', 'javascript:history.back()', class: "link-back" %>
    </div>
  </div>
</div>
