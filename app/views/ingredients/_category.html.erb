            <%= ingredient.amount.to_i %>
          <% else %>
            <%= ingredient.amount %>
          <% end %>
          <%= ingredient.unit %>
        </p>
      </div>
      -->
      <%= render partial: "ingredients_card", locals: { ingredient: ingredient } %>
    <% end %>
  <% end %>
</div>
