<div class="card">
  <div class="card-title">
    <%= ingredient.name %>
  </div>
  <div class="card-content">
    <div class="card-detail">
    <%# conditional leans up display, returns whole numbers & decimals %>
      <% if ingredient.amount % 1 == 0 %>
        <%= ingredient.amount.to_i %>
      <% else %>
        <%= ingredient.amount %>
      <% end %>
      <%= ingredient.unit %>
    </div>
    <div class="card-date">
      <% if ingredient.expiration_date < Date.today + 3 %>
        <span> In <%= (ingredient.expiration_date - Date.today).to_i %> days </span>
      <% else %>
        <%= ingredient.expiration_date %>
      <% end %>
    </div>
  </div>
</div>
